{
    "name": "gin-rummy-card-game",
    "version": "1.0.0",
    "private": true,
    "description": "Gin Rummy card game implemented with PixiJS and GSAP",
    "main": "index.html",
    "scripts": {
        "start": "http-server -c-1 -p 8080",
        "build": "mkdir -p dist && cp -r index.html game.js assets dist/",
        "lint": "eslint game.js",
        "serve": "http-server ./dist -p 8080"
    },
    "dependencies": {
        "gsap": "^3.12.2",
        "pixi-projection": "^0.2.0",
        "pixi.js": "^7.2.4"
    },
    "devDependencies": {
        "eslint": "^8.43.0",
        "file-loader": "^6.2.0",
        "html-webpack-inline-source-plugin": "^0.0.10",
        "html-webpack-plugin": "^5.6.3",
        "http-server": "^14.1.1",
        "uglify-js": "^3.17.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.99.6",
        "webpack-cli": "^6.0.1"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
